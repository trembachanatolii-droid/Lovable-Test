# Environment Variables for Form Notifications
# Copy this file to .env and fill in your values
# These variables must also be set in Netlify Dashboard for production

# ================================================
# EMAIL SERVICE (Resend)
# ================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your verified sending domain
EMAIL_DOMAIN=trembachlaw.com

# ================================================
# SMS SERVICE (Twilio)
# ================================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio phone number (must include +1 country code)
TWILIO_PHONE_NUMBER=+13101234567
