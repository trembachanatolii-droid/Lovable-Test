# Cache Control Headers for Static Assets
# These rules ensure optimal caching for all static assets
# Compatible with Netlify, Cloudflare Pages, and similar hosting platforms

# Default: All assets with content hash - long-term immutable caching (1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Images in assets folder - long-term caching
/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.gif
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript files - long-term caching (hashed filenames ensure cache busting)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Type: application/javascript; charset=utf-8

# CSS files - long-term caching
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Type: text/css; charset=utf-8

# Root-level static files
/styles.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Type: text/css; charset=utf-8

# Images in public folder - long-term caching
/images/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/images/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/images/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/images/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/images/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Icons folder
/icons/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Root-level image files
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.ico
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.gif
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Font files - long-term caching
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.otf
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.eot
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Root JS files (if any)
/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Type: application/javascript; charset=utf-8

# Root CSS files
/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Type: text/css; charset=utf-8

# HTML files - Short cache with revalidation for instant updates
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-Permitted-Cross-Domain-Policies: none
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Root HTML (index.html)
/
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-Permitted-Cross-Domain-Policies: none
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

/index.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-Permitted-Cross-Domain-Policies: none
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Manifest and configuration files - Medium cache with revalidation
/manifest.json
  Cache-Control: public, max-age=86400, must-revalidate
  X-Content-Type-Options: nosniff

/*.json
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

# XML files (sitemap, etc.)
/*.xml
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

/sitemap.xml
  Cache-Control: public, max-age=86400, must-revalidate
  X-Content-Type-Options: nosniff

# Text files
/*.txt
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

/robots.txt
  Cache-Control: public, max-age=86400, must-revalidate
  X-Content-Type-Options: nosniff

# Service worker - no caching to ensure updates
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff

/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff
